<div class="row">
    <div class="col-12 monConteneurBouttonCreation">
        <a href="{{ path("creation_professeur") }}"><button type="button" class="btn btn-primary">Création d'un nouveau professeur</button></a>
    </div>
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {% set cpt = 0 %}
        {% for professeur in professeurs %}
            {% if(cpt%2==0) %}
                <tr class="monTr table-secondary">
                    <td>{{professeur.nom}}</td>
                    <td>
                        <a href="{{ path("modifier_professeur", {"id": professeur.id}) }}">
                            <button type="button" class="btn btn-primary" >Modifier</button>
                        </a>
                    </td>
                    <td>
                        <form method="post" action="{{ path('supprimer_professeur', {'id': professeur.id}) }}" onsubmit="return confirm('Etes-vous sûr de supprimer ce professeur ?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ professeur.id) }}">
                            <button class="btn btn-primary">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr class="monTr">
                    <td>{{professeur.nom}}</td>
                    <td>
                        <a href="{{ path("modifier_professeur", {"id": professeur.id}) }}">
                            <button type="button" class="btn btn-primary" >Modifier</button>
                        </a>
                    </td>
                    <td>
                        <form method="post" action="{{ path('supprimer_professeur', {'id': professeur.id}) }}" onsubmit="return confirm('Etes-vous sûr de supprimer ce professeur ?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ professeur.id) }}">
                            <button class="btn btn-primary">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endif %}
            {% set cpt = cpt + 1 %}
        {% endfor %}
        </tbody>
    </table>
</div>