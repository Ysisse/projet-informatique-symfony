{{ form_start(form, {'attr': {'class':'was-validated'}}) }}

    <div class="form-group row">
        <label for="login" class="col-sm-2 col-form-label">
            {{ form_label(form.module) }}
        </label>
        <div class="col-sm-8">
            {{ form_widget(form.module) }}
        </div>
    </div>
    <div class="form-group row">
        <label for="login" class="col-sm-2 col-form-label">
            {{ form_label(form.typeCours) }}
        </label>
        <div class="col-sm-8">
            {{ form_widget(form.typeCours) }}
        </div>
    </div>
    <div class="form-group row">
        <label for="login" class="col-sm-2 col-form-label">
            {{ form_label(form.date) }}
        </label>
        <div class="col-sm-8">
            {{ form_widget(form.date) }}
        </div>
    </div>
    <div class="form-group row">
        <label for="login" class="col-sm-2 col-form-label">
            {{ form_label(form.heureDebut) }}
        </label>
        <div class="col-sm-8">
            {{ form_widget(form.heureDebut) }}
        </div>
    </div>
    <div class="form-group row">
        <label for="login" class="col-sm-2 col-form-label">
            {{ form_label(form.heureFin) }}
        </label>
        <div class="col-sm-8">
            {{ form_widget(form.heureFin) }}
        </div>
    </div>

    <div class="form-group row">
        <label for="login" class="col-sm-2 col-form-label">
            {{ form_label(form.salle) }}
        </label>
        <div class="col-sm-8" style="padding-top: 1px;">
            {{ form_widget(form.salle) }}
        </div>
    </div>
    <div class="form-group row">
        <label for="login" class="col-sm-2 col-form-label">
            {{ form_label(form.groupes) }}
        </label>
        <div class="col-sm-8" style="padding-top: 11px;">
            {{ form_widget(form.groupes) }}
        </div>
    </div>
    <div class="form-group row">
        <label for="login" class="col-sm-2 col-form-label">
            {{ form_label(form.professeurs) }}
        </label>
        <div class="col-sm-8">
            {{ form_widget(form.professeurs) }}
        </div>
    </div>

    <button class="btn btn-primary">{{ button_label|default('Créer') }}</button>

    {% if(app.session.get('error') is not null and app.session.get('error')=="ERROR_MODULE") %}
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            L'intitulé du module existe déjà. Veuillez écrire un autre intitulé ...
        </div>
    {% endif %}
{{ form_end(form) }}