<form>
    <fieldset>
        <div class="row">
            <div class="col-2">
                <label>Groupe : </label>
                {% for groupe in groupes %}
                    <div class="form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox" value="{{ groupe.id }}" checked>
                            {{ groupe.intitule }}
                        </label>
                    </div>
                {% endfor %}
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label for="module">Module :</label>
                    <select class="form-control monSelect" id="module"  >
                        <option value="-1">Tous les modules</option>
                        {% for module in modules %}
                            <option value="{{ module.id }}"> {{ module.intitule }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="col-2">
                <label>Type de cours : </label>
                {% for typeCours in typesCours %}
                    <div class="form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox" value="{{ typeCours.id }}" checked="">
                            {{ typeCours.intitule }}
                        </label>
                    </div>
                {% endfor %}
            </div>
            <div class="col-4">
                <div class="form-group" id="conteneurValiderFiltre">
                    <button type="submit" name="boutonValidation" class="btn btn-primary">Valider</button>
                </div>
            </div>
        </div>
    </fieldset>
</form>
